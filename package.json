{
	"name": "opsscriptmd",
	"displayName": "OpsScriptMD",
	"description": "A documentation tool for semi-automatic operations",
	"version": "0.7.1",
	"publisher": "negokaz",
	"engines": {
		"vscode": "^1.32.0"
	},
	"icon": "docs/images/icon.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"Markdown",
		"Operations"
	],
	"galleryBanner": {
		"color": "#000000",
		"theme": "dark"
	},
	"activationEvents": [
		"onCommand:opsScriptMD.openOpsView",
		"onCommand:opsScriptMD.openOpsViewToTheSide"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "opsScriptMD.openOpsView",
				"title": "OpsScriptMD: Open OpsView"
			},
			{
				"command": "opsScriptMD.openOpsViewToTheSide",
				"title": "OpsScriptMD: Open OpsView to the Side",
				"icon": {
					"light": "./media/image/preview-side-light.svg",
					"dark": "./media/image/preview-side-dark.svg"
				}
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "opsScriptMD.openOpsView",
					"when": "editorLangId == markdown"
				},
				{
					"command": "opsScriptMD.openOpsViewToTheSide",
					"when": "editorLangId == markdown"
				}
			],
			"explorer/context": [
				{
					"command": "opsScriptMD.openOpsView",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "opsScriptMD.openOpsViewToTheSide",
					"when": "editorLangId == markdown",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"command": "opsScriptMD.openOpsViewToTheSide",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"clean": "rm -rf ./out",
		"vscode:prepublish": "webpack --mode production",
		"package": "vsce package",
		"build": "webpack --mode development",
		"watch": "webpack --mode development --watch",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test-compile": "tsc -p ./",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/highlight.js": "^9.12.3",
		"@types/markdown-it": "0.0.9",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.14",
		"@types/pubsub-js": "^1.5.18",
		"@types/relaxed-json": "^1.0.0",
		"@types/uuid": "^3.4.4",
		"@types/which": "^1.3.2",
		"@types/yaml": "^1.0.2",
		"css-loader": "^3.4.2",
		"style-loader": "^1.1.3",
		"ts-loader": "^6.2.1",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vsce": "^1.59.0",
		"vscode": "^1.1.34",
		"webpack": "^4.41.6",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"@types/make-dir": "^2.1.0",
		"ansi-to-html": "^0.6.14",
		"barbe": "^3.0.15",
		"debug": "^4.1.1",
		"fast-glob": "^3.1.1",
		"highlight.js": "^10.4.1",
		"iconv-lite": "^0.5.0",
		"make-dir": "^3.0.2",
		"markdown-it": "^10.0.0",
		"markdown-it-container": "^2.0.0",
		"object-assign-deep": "^0.4.0",
		"pubsub-js": "^1.7.0",
		"relaxed-json": "^1.0.3",
		"tippy.js": "^5.2.1",
		"uuid": "^3.3.2",
		"which": "^2.0.2",
		"yaml": "^1.5.0"
	},
	"license": "SEE LICENSE IN LICENSE",
	"bugs": {
		"url": "https://github.com/negokaz/vscode-ops-script-md/issues",
		"email": "negokaz@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/negokaz/vscode-ops-script-md.git"
	},
	"homepage": "https://github.com/negokaz/vscode-ops-script-md/blob/master/README.md"
}
